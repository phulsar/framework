<phpunit bootstrap="vendor/autoload.php" beStrictAboutTestsThatDoNotTestAnything="true">
    <testsuites>
        <testsuite name="root">
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>
</phpunit>
